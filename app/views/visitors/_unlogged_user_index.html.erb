<div class="row">
  <div class="col-lg-12">
    <div class="intro-message">
      <h1>Single page application</h1>
      <hr class="intro-divider">
      <h3>Welcome, <%= user_signed_in? ? "#{current_user.name}" : "Guest" %></h3>
      <div class="col-md-12">
        <h4>Hi, this is demo application. </h4>
      </div>
      
      <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#signup">Sign up</button> OR <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#signin">Sign in</button>
    </div>
  </div>
</div>
<%= render 'remote_content/sign_in' %>
<%= render 'remote_content/sign_up' %>